#!/usr/bin/env modbuild

pbuild::configure() {
	cat <<EOF > "${MODULE_SRCDIR}/make.inc"
PLAT		= 
SuperLUroot 	= \${PREFIX}
SUPERLULIB   	= \$(SuperLUroot)/lib/libsuperlu.a
BLASDEF	     	= -DUSE_VENDOR_BLAS
BLASLIB      	= \${OPENBLAS_PREFIX}/lib/libopenblas.a
TMGLIB          = libtmglib.a
METISLIB	=
PARMETISLIB	=
FLIBS	 	= 
LIBS            = \$(DSUPERLULIB) \$(BLASLIB) \$(PARMETISLIB) \$(METISLIB)
ARCH         	= ar
ARCHFLAGS    	= cr
RANLIB       	= ranlib
CC           	= ${CC}
CFLAGS          = -pipe -O3
NOOPTS		= 
FORTRAN         = ${FC}
F90FLAGS	= 
LOADER	        = ${FC}
LOADOPTS	= -fopenmp 
CDEFS        = -DAdd_ 
EOF
}

pbuild::build() {
	cd "${MODULE_SRCDIR}"
	mkdir -p "${PREFIX}/lib"
	make
}

pbuild::install() {
	make install
	mkdir -p "${PREFIX}/include"
	install -m 0444 "${MODULE_SRCDIR}"/SRC/*.h "${PREFIX}/include"
}

pbuild::add_to_group 'Compiler'
pbuild::set_runtime_dependencies "${COMPILER}"
pbuild::set_build_dependencies "${COMPILER}" 'OpenBLAS'
pbuild::set_docfiles 'README'
pbuild::make_all
pbuild::cleanup_src
