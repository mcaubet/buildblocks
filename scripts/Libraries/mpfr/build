#!/usr/bin/env modbuild

pbuild::configure() {
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		--with-gmp=$GMP_PREFIX \
		--disable-shared \
		|| exit 1
}

# use system gcc to compile
declare -rx CC=gcc

module use 'Libraries'

pbuild::add_to_group 'Libraries'
pbuild::set_build_dependencies 'gmp'
pbuild::make_all
