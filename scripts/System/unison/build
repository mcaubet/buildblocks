#!/usr/bin/env modbuild

pbuild::configure() {
	:
}

pbuild::build() {
	cd "${MODULE_SRCDIR}"
	make
}

pbuild::install() {
	cd "${MODULE_SRCDIR}"
	install -m 0755 -d "${PREFIX}/bin"
	install -m 0755 unison "${PREFIX}/bin"
}

pbuild::add_to_group 'System'
pbuild::set_docfiles 'BUGS.txt' 'CONTRIB' 'COPYING' 'NEWS' 'README'
#pbuild::set_build_dependencies "${COMPILER}"
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
