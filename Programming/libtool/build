#!/usr/bin/env modbuild

SOURCE_URL="https://ftp.gnu.org/gnu/$P/$P-$V.tar.gz"

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

# use system gcc to compile
declare -rx CC=gcc

pbuild::add_to_group 'Programming'
pbuild::set_docfiles 'AUTHORS' 'COPYING' 'NEWS' 'README' 'THANKS'
pbuild::make_all

