#!/usr/bin/env modbuild

SOURCE_URL="https://ftp.gnu.org/gnu/$P/$P-$V.tar.gz"

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

# use system gcc to compile
declare -rx CC=gcc

pbuild::add_to_group 'Programming'
pbuild::set_docfiles \
	AUTHORS \
	COPYING \
	ChangeLog \
	HACKING \
	NEWS \
	README \
	THANKS
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:

