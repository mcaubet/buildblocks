#!/usr/bin/env modbuild

pbuild::set_download_url "http://amas.web.psi.ch/Downloads/$P/$P-$V.tar.gz"

#	--enable-vtkconverter \

pbuild::configure() {
	# (cd "${SRC_DIR}" && ./autogen.sh)
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--enable-debug \
		--with-hdf5="${HDF5_SERIAL_PREFIX}" \
		--with-pic \
		|| exit 1
}

pbuild::compile() {
	make -C src
	make -C tools 
}

pbuild::install() {
	make -C src install
	make -C tools install
}

pbuild::add_to_group 'HDF5_serial'

