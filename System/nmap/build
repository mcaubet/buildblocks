#!/usr/bin/env modbuild

pbuild::configure() {
	cd "${MODULE_SRCDIR}"
	./configure \
		--prefix="${PREFIX}" \
		--with-libpcap=included \
		--with-libpcre=included \
		--with-libdnet=included \
		--with-liblua=included \
		--with-liblinear=included
}

pbuild::build() {
	cd "${MODULE_SRCDIR}"
	make -j "${JOBS}"
}

pbuild::install() {
	cd "${MODULE_SRCDIR}"
	make install
}

pbuild::add_to_group 'System'
pbuild::set_build_dependencies "${COMPILER}"
pbuild::make_all
