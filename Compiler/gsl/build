#!/usr/bin/env modbuild

SOURCE_URL="https://ftp.gnu.org/gnu/$P/$P-$V.tar.gz"

pbuild::configure() {
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

pbuild::add_to_group 'Compiler'
pbuild::set_docfiles \
	'AUTHORS' \
	'BUGS' \
	'COPYING' \
	'ChangeLog' \
	'INSTALL' \
	'NEWS' \
	'README' \
	'THANKS' \
	'TODO'

pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
